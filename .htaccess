<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Allow access to actual files and directories
    RewriteCond %{REQUEST_FILENAME} -d [OR]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^.*$ - [L]
    
    # Route /Backend/* requests to Backend/router.php
    RewriteRule ^Backend/(.*)$ Backend/router.php [QSA,L]
    
    # Route Frontend requests (Vite will handle)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(?!Backend/).*$ index.html [QSA,L]
</IfModule>

# CORS headers for API
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>
